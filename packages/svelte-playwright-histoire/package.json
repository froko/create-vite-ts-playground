{
  "name": "svelte-playwright-histoire",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "format": "prettier . --write && eslint . --cache --fix",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "start": "vite --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview --port 3000",
    "playwright": "playwright test",
    "playwright:ct": "playwright test -c playwright-ct.config.ts",
    "playwright:report": "playwright show-report",
    "histoire": "histoire dev"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "fa-svelte": "^3.1.0"
  },
  "devDependencies": {
    "@histoire/plugin-svelte": "^0.16.1",
    "@playwright/experimental-ct-svelte": "^1.35.1",
    "@playwright/test": "^1.35.1",
    "@sveltejs/vite-plugin-svelte": "^2.4.1",
    "@tsconfig/svelte": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "histoire": "^0.16.2",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-css-order": "^1.3.1",
    "prettier-plugin-svelte": "^2.10.1",
    "svelte": "^3.59.1",
    "svelte-check": "^3.4.3",
    "svelte-loader": "^3.1.8",
    "svelte-preprocess": "^5.0.4",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,svelte}": [
      "svelte-check",
      "eslint --cache --fix"
    ],
    "*.{html,css,scss,json,md}": "prettier --write"
  }
}
