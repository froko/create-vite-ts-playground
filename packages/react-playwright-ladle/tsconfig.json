{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["vite.config.ts", "src"]
}
